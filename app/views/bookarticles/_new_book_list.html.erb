<script>
	document.location.replace("/bookarticles");
</script>

<% 
@book_list.each do |list|
	%>
	
	<% form_remote_tag :url => {:action => 'left_list_delete'}, :update => "new_book_list" do %>	
	<% if (!@book_id.nil? and @book_id == list.id.to_s); button_font_color = "blue";font_size="12"; else button_font_color = "black";font_size="10"; end %>
	<a href="/bookarticles?book_id=<%= list.id.to_s %>"><font color="white">
	<input type="button" value="<%= list.title %>" style="cursor:hand; font-size: <%= font_size %>px; color:<%= button_font_color %>"></font></a>
	<input type="submit" value="삭제" onClick="return confirm('책의 모든 내용이 삭제됩니다 \n정말 삭제하시겠습니까?');" style="cursor:hand;color:red;font-size:10px"><br>
	<input type="hidden" name="book_id" value="<%= list.id.to_s %>">
	<input type="hidden" name="need_reload" value="<%= "true" if !@book_id.nil? and @book_id == list.id.to_s %>">	
	<% end 
end

%>